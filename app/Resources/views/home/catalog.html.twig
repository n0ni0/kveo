{% extends 'layout.html.twig' %}

{% block title %} {{ mediaTypes.slug }}{% endblock %}

{% block body %}
    {{ parent() }}
    <h2 class="title container"> {{ mediaTypes.slug |capitalize }}</h2>
    <div class="media-grid container-fluid">
        {% for medias in media %}
            <div class="media-container">
                <div class="media-card">
                    <a href="{{ path("media", {'slug':medias.slug}) }}">
                        <img src="{{ asset('/images/' ~ medias.img) | imagine_filter('media') }}">
                    </a>
                </div>
                <div class="media-info">
                    <div class="media-title">
                        <a href="{{ path("media", {'slug': medias.slug}) }}">{{ medias.title }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}