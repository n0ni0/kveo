{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="fos-reset container col-md-6 col-md-offset-3">
        <h2 class="form-signing-heading text-align-center"><i class="fa fa-television"></i>
            {{ 'login.company_name'|trans({}, 'messages') }}
        </h2>
        {{ 'resetting.check_email'|trans({'%email%': email}) }}
        <br>
        <a href="{{ path('home') }}" class="btn btn-md btn-danger pull-right">{{ 'btn.back'|trans({}, 'messages') }}</a>
    </div>
{% endblock %}
