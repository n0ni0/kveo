{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %} {% endblock %}

{% block body %}
    <div class="fos-reset container col-md-6 col-md-offset-3">
        <h2 class="form-signing-heading text-align-center"><i class="fa fa-television"></i>
            {{ 'login.company_name'|trans({}, 'messages') }}
        </h2>
        <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
        <div>
            <a href="{{ targetUrl }}" class="btn btn-md btn-danger pull-right">{{ 'registration.back'|trans }}</a>
        </div>
    </div>
{% endblock %}


