{% extends 'layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %} {{ app.user.username }} {% endblock %}

{% block body %}
    <div class="fos_user_user_profile container col-md-5">
        <div class="profile-title">
            <h3>{{ 'profile.personal_info'|trans({}, 'messages') }}</h3>
        </div>
        <div class="gravatar col-md-5">
            <img class="avatar" src="{{ gravatar(app.user.email, 150) }}" />
            <div class="gravatar-link">
                {{ 'profile.gravatar_link'|trans({}, 'messages') }}
                <a href="https://es.gravatar.com/" target="_blank"><strong>Gravatar</strong></a>
            </div>
        </div>
        <div class="profile-form-edit col-md-7">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-xs btn-danger" />
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-xs btn-danger">{{ 'btn.back'|trans({}, 'messages') }}</a>
            </div>
        </div>
    </div>
{% endblock %}
